---
import Refresh from '../assets/refresh-cw.svg';
---

<div role="group" class="input-field-control" aria-label="Input Field">
  <input type="text" id="keyboard-input" autocomplete="off" />
  <button type="button">Redo<Refresh /></button>
</div>

<style>
  .input-field-control {
    --_clr-input-background: var(--clr-neutral-100);
    --_clr-input-border: var(--clr-border-light);

    display: flex;
    max-width: 600px;
    margin-inline: auto;
    align-items: center;
    justify-content: space-between;
    background-color: var(--_clr-input-background);
    border: 1px solid var(--_clr-input-border);
    border-radius: var(--border-radius-lg);
    padding: var(--space-2xs) var(--space-xs);
    box-shadow:
      0px 12px 16px -4px rgba(16, 24, 40, 0.08),
      0px 4px 6px -2px rgba(16, 24, 40, 0.03);

    &:has(input[type='text']:focus-visible) {
      outline: var(--outline-size) var(--accent-color) solid;
      outline-offset: var(--outline-offset);
    }
  }
  input {
    font-size: var(--font-fluid-md);
    font-weight: var(--font-weight-5);
    color: var(--clr-accent-light);
    border: none;
    min-width: 0;
    &:focus,
    &:active {
      outline: none;
    }
  }
  button {
    --_clr-button-background: var(--clr-accent-light);
    --_clr-button-text: var(--clr-neutral-100);

    &:hover {
    }
    &:focus-visible {
      outline: var(--outline-size) var(--accent-color) solid;
      outline-offset: var(--outline-offset);
    }
    &:active {
    }
  }
</style>
