---
import Refresh from '../assets/refresh-cw.svg';
---

<style>
  .input-field-wrapper {
    --_clr-input-background: var(--clr-neutral-100);
    --_clr-input-border: var(--clr-border-light);

    display: flex;
    width: min(600px, 100% - 2rem);
    margin-inline: auto;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-xs);
    background-color: var(--_clr-input-background);
    border: 1px solid var(--_clr-input-border);
    border-radius: var(--border-radius-lg);
    padding: var(--space-2xs) var(--space-xs);
    box-shadow:
      0px 12px 16px -4px rgba(16, 24, 40, 0.08),
      0px 4px 6px -2px rgba(16, 24, 40, 0.03);
  }
  input {
    border: none;
    &:focus,
    &:active {
      outline: none;
    }
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-5);
    color: var(--clr-accent-light);
  }
  button {
    --_clr-button-background: var(--clr-accent-light);
    --_clr-button-text: var(--clr-neutral-100);

    display: inline-flex;
    gap: var(--space-3xs);
    padding: var(--space-2xs);
    border-radius: var(--border-radius-md);
    border: none;
    font-weight: var(--font-weight-5);
    color: var(--_clr-button-text);
    background: linear-gradient(
        133.67deg,
        rgba(255, 255, 255, 0.2) 14.33%,
        rgba(255, 255, 255, 0) 33.02%
      ),
      linear-gradient(0deg, #4f46e5, #4f46e5), #ffffff;
    box-shadow:
      2px 3px 4px rgba(81, 56, 238, 0.05),
      0px 0px 0px 1.5px rgba(81, 56, 238, 0.2);
  }
</style>

<div class="input-field-wrapper" style="--_flow-space: var(--space-l-xl);">
  <input type="text" id="keyboard-input" autocomplete="off" />
  <button type="button">Redo<Refresh /></button>
</div>
