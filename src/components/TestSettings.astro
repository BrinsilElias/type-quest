---
interface Config {
  id: string;
  label: string;
  value: string;
  checked?: boolean;
}

const modeConfig: Config[] = [
  { id: 'timer-mode', label: 'Timer Mode', value: 'timer' },
  {
    id: 'word-count-mode',
    label: 'Word Count Mode',
    value: 'wordCount',
    checked: true,
  },
];

const timerConfig: Config[] = [
  { id: 'timer-15', label: '15', value: '15', checked: true },
  { id: 'timer-30', label: '30', value: '30' },
  { id: 'timer-60', label: '60', value: '60' },
  { id: 'timer-120', label: '120', value: '120' },
];

const wordCountConfig: Config[] = [
  { id: 'word-count-10', label: '10', value: '10', checked: true },
  { id: 'word-count-25', label: '25', value: '25' },
  { id: 'word-count-50', label: '50', value: '50' },
  { id: 'word-count-100', label: '100', value: '100' },
];

const textConfig: Config[] = [
  { id: 'punctuation', label: 'Punctuation', value: 'punctuation' },
  { id: 'numbers', label: 'Numbers', value: 'numbers' },
];
---

<form>
  <fieldset>
    <legend>Test Mode</legend>
    <ul>
      {
        modeConfig.map(({ id, label, value, checked }) => (
          <li>
            <label for={id}>{label}</label>
            <input
              type="radio"
              id={id}
              value={value}
              checked={checked}
              name="typing-mode"
            />
          </li>
        ))
      }
    </ul>
  </fieldset>
  <fieldset>
    <legend>Timer</legend>
    <ul>
      {
        timerConfig.map(({ id, label, value, checked }) => (
          <li>
            <label for={id}>{label}</label>
            <input
              type="radio"
              id={id}
              value={value}
              checked={checked}
              name="timer"
            />
          </li>
        ))
      }
    </ul>
  </fieldset>
  <fieldset>
    <legend>Word Count</legend>
    <ul>
      {
        wordCountConfig.map(({ id, label, value, checked }) => (
          <li>
            <label for={id}>{label}</label>
            <input
              type="radio"
              id={id}
              value={value}
              checked={checked}
              name="word-count"
            />
          </li>
        ))
      }
    </ul>
  </fieldset>
  <fieldset>
    <legend>Punctuation and Numbers</legend>
    <ul>
      {
        textConfig.map(({ id, label, value }) => (
          <li>
            <label for={id}>{label}</label>
            <input type="checkbox" id={id} value={value} />
          </li>
        ))
      }
    </ul>
  </fieldset>
</form>
